{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      // load Cypress global type
      "cypress",
      "vite/client",
      "jest"
    ]
  },
  "include": [
    "src",
    "test",
    "shared",
    "_types",
    "vite.config.ts"
  ],
  "exclude": [
    "infrastructure",
    "backend"
  ]
}
